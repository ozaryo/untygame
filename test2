#include <stdio.h>

int main(void)
{
	FILE *fp ;
	int  b[5] , i , sum , ave;
	char a[80], n[80];
	
	printf("ファイルの名前を入力してください。(端子まで入力してください。)\n");
	scanf("%s" , n);
	fp=fopen(("%s" ,n), "w");
	if(fp==NULL){
	printf("404 not found");
	return 1;
	}
	
	printf("名前を入力\n");
	scanf("%s" ,a);
	printf("5教科の点数を入力\n");
	printf("英語:");
	scanf("%d" ,&b[0]);
	printf("数学:");
	scanf("%d" ,&b[1]);
	printf("国語:");
	scanf("%d" ,&b[2]);
	printf("理科:");
	scanf("%d" ,&b[3]);
	printf("社会:");
	scanf("%d" ,&b[4]);
	
	fprintf(fp , "%s\n\n英語\t%d点\n数学\t%d点\n国語\t%d点\n理科\t%d点\n社会\t%d点\n\n" , a , b[0] , b[1], b[2] , b[3], b[4]);
	
	sum=0;
	for(i=0;i<5;i++)
	{
	sum=sum+b[i];
	}
	ave=sum/5;
	fprintf(fp ,"5科合計\t%d点\n5科平均\t%d点\n" ,sum , ave);
	printf("%sさんの5教科の点数と5教科の合計、平均が%sに書き込まれました。確認してください。\n",a ,n);
	return 0;
	
	}
